<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/imagenCircuitoItem"
            android:layout_width="117dp"
            android:layout_height="159dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"/>

    <TextView
            android:id="@+id/nombreCircuitoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="10dp"/>
    <TextView
            android:id="@+id/vueltaRapidaItem"
            android:layout_width="122dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/nombreCircuitoItem"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="12dp"/>
    <TextView
            android:id="@+id/paisCircuitoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/vueltaRapidaItem"
            app:layout_constraintStart_toEndOf="@+id/textView10" android:layout_marginStart="10dp"/>
    <TextView
            android:id="@+id/longitudCircuitoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/paisCircuitoItem"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/textView11" android:layout_marginStart="10dp"/>
    <TextView
            android:text="Circuito:"
            android:layout_width="wrap_content"
            android:layout_height="25dp" android:id="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/imagenCircuitoItem"
            android:layout_marginTop="24dp" android:layout_marginStart="12dp" android:textSize="20sp"
            android:textStyle="bold" android:textColor="#FFFFFF"/>
    <TextView
            android:text="Vuelta Rápida:"
            android:layout_width="wrap_content"
            android:layout_height="25dp" android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/imagenCircuitoItem" android:layout_marginTop="4dp"
            android:layout_marginStart="12dp" android:textSize="20sp" android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    <TextView
            android:text="País:"
            android:layout_width="wrap_content"
            android:layout_height="26dp" android:id="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toEndOf="@+id/imagenCircuitoItem" android:layout_marginStart="12dp"
            android:layout_marginTop="4dp" android:textSize="20sp" android:textStyle="bold"
            android:textColor="#FFFFFF"/>
    <TextView
            android:text="Longitud:"
            android:layout_width="wrap_content"
            android:layout_height="24dp" android:id="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/imagenCircuitoItem" android:layout_marginStart="12dp"
            android:layout_marginTop="4dp" android:textSize="20sp" android:textStyle="bold"
            android:textColor="#FFFFFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>