<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".aplication.ui.user.UserFragment"
                                                   android:background="@color/black"
>

    <TextView
            android:id="@+id/tv_username_uprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp" android:layout_marginStart="176dp" android:textAlignment="center"/>
    <TextView
            android:id="@+id/tv_email_uprofile"
            android:layout_width="192dp"
            android:layout_height="24dp"
            android:text="E - mail"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/tv_username_uprofile"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            android:layout_marginStart="108dp" android:textAlignment="center"/>
    <Button
            android:text="Borrar Cuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_darse_de_baja_uprofile"
            android:textColor="#FFFFFF"
        android:backgroundTint="@color/red"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="28dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="120dp"/>
    <ImageView
            android:src="@drawable/casco"
            android:layout_width="218dp"
            android:layout_height="117dp" android:id="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="56dp" android:layout_marginStart="96dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>