<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".aplication.ui.noticias.Noticias">
    <ImageView
            android:layout_width="160dp"
            android:src="@drawable/logof1"
            android:layout_height="153dp" tools:src="@drawable/logof1" android:id="@+id/logoHome"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"/>
    <TextView
            android:text="Ultimas Noticias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoHome" android:layout_marginTop="25dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="409dp"
            android:layout_height="492dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/listaNoticiasHome" android:clipToPadding="false"
            android:paddingBottom="72dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>