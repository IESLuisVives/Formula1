<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@color/black"
                                                   android:layout_height="match_parent"
                                                   tools:context=".loginRegister.Register">
    <ImageView
            android:layout_width="179dp"
            android:layout_height="112dp" android:id="@+id/iv_register"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp" android:layout_marginStart="25dp" android:src="@drawable/logof1"/>
    <TextView
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="35dp"
            app:layout_constraintStart_toEndOf="@+id/iv_register" app:layout_constraintTop_toTopOf="@+id/iv_register"
            app:layout_constraintBottom_toBottomOf="@+id/iv_register" android:layout_marginEnd="25dp"
            android:textColor="#FFFFFF"/>
    <ScrollView
            android:layout_width="397dp"
            android:layout_height="291dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/button_go_to_login"
            app:layout_constraintTop_toBottomOf="@+id/iv_register" android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp" app:layout_constraintVertical_bias="0.0" android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical" android:gravity="center">
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/redondear"
                    android:textColorHint="@color/red"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawableTint="@color/red"
                    android:ems="10"
                    android:id="@+id/et_username_register" android:hint="Username"
                    android:layout_marginTop="25dp"
                    android:minHeight="48dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/redondear"
                    android:textColorHint="@color/red"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawableTint="@color/red"
                    android:ems="10"
                    android:id="@+id/et_email_register"
                    android:layout_marginTop="25dp"
                    android:hint="E - mail" android:minHeight="48dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:background="@drawable/redondear"
                    android:textColorHint="@color/red"
                    android:drawableLeft="@drawable/ic_baseline_key_24"
                    android:drawableTint="@color/red"
                    android:ems="10"
                    android:id="@+id/et_password_register"
                    android:layout_marginTop="25dp"
                    android:hint="Password" android:minHeight="48dp"/>
            <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redondear"
                    android:textColorHint="@color/red"
                    android:drawableLeft="@drawable/ic_baseline_key_24"
                    android:drawableTint="@color/red"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/et_repeat_password_register" android:hint="Repeat password"
                    android:layout_marginTop="25dp"
                    android:minHeight="48dp"/>
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="Log in"
            android:layout_width="wrap_content"
            android:background="@drawable/redondear"
            android:backgroundTint="@color/white"
            android:textColor="@color/red"
            android:layout_height="wrap_content" android:id="@+id/button_go_to_login"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="35dp" android:layout_marginBottom="35dp"/>
    <Button
            android:text="Register"
            android:layout_width="wrap_content"
            android:background="@drawable/redondear"
            android:backgroundTint="@color/white"
            android:textColor="@color/red"
            android:layout_height="wrap_content" android:id="@+id/button_ok_register"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/button_go_to_login"
            android:layout_marginEnd="35dp"/>
    <ImageView
            android:src="@drawable/haas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>