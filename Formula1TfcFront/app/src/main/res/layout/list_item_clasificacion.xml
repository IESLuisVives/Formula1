<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:layout_width="53dp"
                android:layout_height="50dp" android:id="@+id/textPosicion3"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp" android:layout_marginStart="4dp" android:textSize="20sp"
                android:text="TextView" android:layout_weight="1" android:textStyle="bold"
                android:textAlignment="center"/>
        <TextView
                android:text="TextView"
                android:layout_width="85dp"
                android:layout_height="50dp" android:id="@+id/textNombre3"
                app:layout_constraintStart_toEndOf="@+id/textPosicion" android:layout_marginStart="12dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:textSize="20sp"
                android:layout_weight="1" android:textAlignment="center"/>
        <TextView
                android:text="TextView"
                android:layout_width="85dp"
                android:layout_height="51dp" android:id="@+id/textEscuderia3"
                app:layout_constraintStart_toEndOf="@+id/textNombre" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" android:layout_marginStart="12dp" android:textSize="20sp"
                android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="59dp"
                android:layout_height="49dp" android:id="@+id/textBandera3"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textEscuderia"
                android:layout_marginTop="8dp" android:layout_marginStart="12dp" android:textSize="20sp"
                android:layout_weight="1"/>
        <TextView
                android:text="TextView"
                android:layout_width="70dp"
                android:layout_height="47dp" android:id="@+id/textPuntos3"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textBandera"
                android:layout_marginTop="8dp" android:layout_marginStart="12dp" android:textSize="20sp"
                android:layout_weight="1" android:textStyle="bold" android:textAlignment="center"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>