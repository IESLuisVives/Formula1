<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".aplication.ui.pilotos.Pilotos"
    android:background="@color/black">

    <TextView
        android:id="@+id/tituloPilotos"
        android:layout_width="177dp"
        android:layout_height="45dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="56dp"
        android:text="Pilotos"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="409dp"
            android:layout_height="584dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/tituloPilotos"
            android:layout_marginTop="44dp" android:id="@+id/recyclerPilotos" android:clipToPadding="false"
            android:paddingBottom="72dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>