<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".aplication.ui.clasificacionEscuderia.ClasificacionEscuderaFragment"
                                                   android:id="@+id/frameLayout"
android:background="@color/black">
    <TextView
            android:text="Clasificación Escuderias"
            android:layout_width="397dp"
            android:layout_height="58dp" android:id="@+id/tituloClasificacionEscuderias"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="72dp" android:layout_marginStart="4dp" android:textSize="34sp"
            android:textAlignment="center" android:textColor="#FFFFFF"/>
    <LinearLayout
            android:layout_width="413dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tituloClasificacionEscuderias" android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/linearLayout2">
        <TextView
                android:text="Posición"
                android:layout_width="73dp"
                android:layout_height="match_parent" android:id="@+id/tituloPosicion" android:layout_weight="1"
                android:textColor="#FFFFFF" android:textSize="24sp" android:textStyle="bold"/>
        <TextView
                android:text="Escuderia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/tituloEscuderia" android:layout_weight="1"
                android:textSize="24sp" android:textColor="#FFFFFF" android:textAlignment="center"
                android:textStyle="bold"/>
        <TextView
                android:text="Puntos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/tituloPuntos" android:layout_weight="1"
                android:textSize="24sp" android:textColor="#FFFFFF" android:textStyle="bold"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="412dp"
            android:layout_height="517dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/recyclerClasificacionEscuderias"
            android:clipToPadding="false"
            android:paddingBottom="72dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>