<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >

    <androidx.cardview.widget.CardView
            android:layout_width="378dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="30dp"
            android:backgroundTint="#131313"
            app:cardElevation="30dp" app:layout_constraintEnd_toEndOf="parent">
        <TextView
                android:id="@+id/textView_titulo"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:layout_marginTop="140dp"
                android:textAlignment="center" android:layout_marginLeft="20dp"/>
        <ImageView
                android:layout_width="370dp"
                android:layout_height="130dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView2"
                android:layout_marginTop="10dp" android:layout_marginStart="4dp"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>